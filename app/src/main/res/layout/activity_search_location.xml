<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SearchLocationActivity">

    <ImageView
        android:id="@+id/iv_back_searchLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:src="@drawable/ic_arrow_back" />

    <SearchView
        android:id="@+id/sv_searchForLocation_SearchLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_back_searchLocation"
        android:layout_margin="@dimen/dp_10"
        android:iconifiedByDefault="false"
        android:queryHint="@string/searchforLocation" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_Location"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sv_searchForLocation_SearchLocation"
        android:layout_marginTop="@dimen/dp_10" />

</RelativeLayout>